{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./tmp/ts-output",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/javascript/src/*"]
    }
  },
  "include": ["app/javascript/**/*"],
  "exclude": ["node_modules", "tmp"]
}
